<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/zong">

    <TextView android:text="体重指数计算器"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:paddingTop="50sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView android:text="身高"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="40sp"/>
        <EditText
            android:layout_width="160sp"
            android:layout_height="40sp"
            android:background="@drawable/shape1"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:id="@+id/edit1"
            android:inputType="number"
            android:hint="输入您的身高"
           android:singleLine="true"
            />
        <TextView android:text="cm"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="40sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:text="体重"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textSize="40sp" />
        <EditText
            android:layout_width="160sp"
            android:layout_height="40sp"
            android:background="@drawable/shape1"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:id="@+id/edit2"
            android:inputType="number"
            android:hint="输入您的体重"
            android:singleLine="true"
            />
        <TextView android:text="kg"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textSize="40sp" />
    </LinearLayout>
<Button
    android:layout_marginTop="30sp"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="200dp"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:text="计算BMI"
    android:textSize="30sp"
    android:background="@drawable/selecter"
    android:id="@+id/btn"/>
<TextView
    android:layout_marginTop="4dp"
    android:layout_width="400sp"
    android:layout_height="50sp"
    android:gravity="center"
    android:text="请输入正确身高和体重!"
    android:textSize="30dp"/>
    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="制作人：张雨"
        android:textSize="30dp"/>
    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="----version 1.0"
        android:textSize="30dp"/>
</LinearLayout>
